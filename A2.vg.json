{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "columns": 2,
    "rows": 2,
    "align": "each",
    "concat": [
        {
            "title": "Happiness World Map",
            "width": 500,
            "height": 250,
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "projection": {
                "type": "equalEarth"
            },
            "layer": [
                {
                    "transform": [
                        {
                            "calculate": "'Data is not available in ' + datum.properties.NAME",
                            "as": "note"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "stroke": "white"
                    },
                    "encoding": {
                        "tooltip": {
                            "field": "note"
                        }
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "oceans"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "skyblue"
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_graticules_30"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": null,
                        "stroke": "lightgray"
                    }
                },
                {
                    "transform": [
                        {
                            "lookup": "properties.NAME",
                            "from": {
                                "data": {
                                    "url": "WHR_2023.csv"
                                },
                                "key": "country",
                                "fields": [
                                    "happiness"
                                ]
                            }
                        },
                        {
                            "calculate": "datum.happiness/1000",
                            "as": "Happiness Score"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "stroke": "white"
                    },
                    "encoding": {
                        "color": {
                            "field": "Happiness Score",
                            "type": "quantitative",
                            "scale": {
                                "type": "linear",
                                "scheme": "redyellowgreen"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "properties.NAME",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "Happiness Score",
                                "type": "quantitative",
                                "format": ".2f"
                            }
                        ]
                    }
                }
            ],
            "config": {}
        },
        {
            "width": 400,
            "height": 250,
            "title": "World Happiness",
            "data": {
                "url": "WHR_2023.csv"
            },
            "encoding": {
                "x": {
                    "field": "gdp_per_capita",
                    "type": "quantitative",
                    "title": "GDP per Capita",
                    "axis": {
                        "tickCount": 5
                    },
                    "scale": {
                        "type": "linear",
                        "domain": [
                            0,
                            2500
                        ]
                    }
                },
                "y": {
                    "field": "social_support",
                    "type": "quantitative",
                    "axis": {
                        "tickCount": 9
                    },
                    "scale": {
                        "type": "linear",
                        "domain": [
                            0,
                            1800
                        ]
                    }
                }
            },
            "layer": [
                {
                    "transform": [
                        {
                            "filter": "datum.gdp_per_capita > 0"
                        }
                    ],
                    "selection": {
                        "region_highlight": {
                            "type": "multi",
                            "fields": [
                                "region"
                            ],
                            "bind": "legend"
                        }
                    },
                    "mark": {
                        "type": "circle",
                        "stroke": "#000000"
                    },
                    "encoding": {
                        "x": {
                            "field": "gdp_per_capita",
                            "type": "quantitative",
                            "title": "GDP per Capita",
                            "axis": {
                                "tickCount": 5
                            },
                            "scale": {
                                "type": "linear",
                                "domain": [
                                    0,
                                    2500
                                ]
                            }
                        },
                        "y": {
                            "field": "social_support",
                            "type": "quantitative",
                            "title": "Social Support",
                            "axis": {
                                "tickCount": 9
                            },
                            "scale": {
                                "type": "linear",
                                "domain": [
                                    0,
                                    1800
                                ]
                            }
                        },
                        "strokeOpacity": {
                            "condition": {
                                "test": "datum['country'] == 'United States of America' || datum['country'] == 'China' || datum['country'] == 'Palestine' || datum['country'] == 'Benin' || datum['country'] == 'Kenya' || datum['country'] == 'United Kingdom'",
                                "value": 1
                            },
                            "value": 0
                        },
                        "color": {
                            "title": "Region",
                            "field": "region",
                            "type": "nominal",
                            "scale": {
                                "domain": [
                                    "South Asia",
                                    "Central and Eastern Europe",
                                    "Middle East and North Africa",
                                    "Latin America and Caribbean",
                                    "North America and ANZ",
                                    "Western Europe",
                                    "Sub-Saharan Africa",
                                    "Southeast Asia",
                                    "East Asia",
                                    "Commonwealth of Independent States",
                                    "Africa"
                                ],
                                "range": [
                                    "#a6cee3",
                                    "#b2df8a",
                                    "#1f78b4",
                                    "#33a02c",
                                    "#e31a1c",
                                    "#fdbf6f",
                                    "#6a3d9a",
                                    "#fb9a99",
                                    "#cab2d6",
                                    "#ffff99",
                                    "#ff7f00"
                                ]
                            }
                        },
                        "opacity": {
                            "condition": {
                                "selection": "region_highlight",
                                "value": 0.6
                            },
                            "value": 0.2
                        },
                        "size": {
                            "field": "happiness",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [
                                    1000,
                                    2000,
                                    3000,
                                    4000,
                                    5000,
                                    6000
                                ],
                                "range": [
                                    10,
                                    20,
                                    40,
                                    80,
                                    160,
                                    340,
                                    680
                                ]
                            },
                            "legend": {
                                "format": ".1s"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "country",
                                "type": "nominal"
                            },
                            {
                                "field": "happiness",
                                "type": "quantitative",
                                "format": ","
                            },
                            {
                                "field": "gdp_per_capita",
                                "type": "quantitative",
                                "format": ","
                            },
                            {
                                "field": "social_support",
                                "type": "quantitative",
                                "format": ","
                            }
                        ]
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "baseline": "middle",
                        "dx": -12,
                        "fontSize": 11.5,
                        "fontStyle": "italic"
                    },
                    "encoding": {
                        "text": {
                            "field": "country",
                            "type": "nominal"
                        },
                        "color": {
                            "value": "black"
                        },
                        "opacity": {
                            "condition": {
                                "test": "datum['country'] == 'United States of America' || datum['country'] == 'China' || datum['country'] == 'Palestine' || datum['country'] == 'Benin' || datum['country'] == 'Kenya' || datum['country'] == 'United Kingdom'",
                                "value": 1
                            },
                            "value": 0
                        },
                        "tooltip": [
                            {
                                "field": "country",
                                "type": "nominal"
                            },
                            {
                                "field": "happiness",
                                "type": "quantitative",
                                "format": ","
                            },
                            {
                                "field": "gdp_per_capita",
                                "type": "quantitative",
                                "format": ","
                            },
                            {
                                "field": "social_support",
                                "type": "quantitative",
                                "format": ","
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": 400,
            "height": 200,
            "title": "Average Happiness Over Time",
            "data": {
                "url": "WHR(Combined).csv"
            },
            "mark": "bar",
            "encoding": {
                "x": {
                    "timeUnit": "year",
                    "field": "year",
                    "type": "ordinal",
                    "title": "Year"
                },
                "y": {
                    "title": "Average Happiness",
                    "field": "happiness_score",
                    "aggregate": "average",
                    "type": "quantitative"
                },
                "color": {
                    "title": "Region",
                    "field": "region",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "South Asia",
                            "Central and Eastern Europe",
                            "Middle East and North Africa",
                            "Latin America and Caribbean",
                            "North America and ANZ",
                            "Western Europe",
                            "Sub-Saharan Africa",
                            "Southeast Asia",
                            "East Asia",
                            "Commonwealth of Independent States",
                            "Africa"
                        ],
                        "range": [
                            "#a6cee3",
                            "#b2df8a",
                            "#1f78b4",
                            "#33a02c",
                            "#e31a1c",
                            "#fdbf6f",
                            "#6a3d9a",
                            "#fb9a99",
                            "#cab2d6",
                            "#ffff99",
                            "#ff7f00"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "region",
                        "type": "nominal",
                        "title": "Region"
                    },
                    {
                        "field": "happiness_score",
                        "aggregate": "average",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Average Happiness Score"
                    }
                ]
            }
        },
        {
            "width": 400,
            "height": 200,
            "title": "Average GDP per Capita by Region",
            "data": {
                "url": "WHR_2023.csv"
            },
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "gdp_per_capita",
                    "type": "quantitative",
                    "title": "GDP per Capita",
                    "aggregate": "average"
                },
                "y": {
                    "field": "region",
                    "type": "nominal",
                    "title": "Region",
                    "sort": "-x"
                },
                "color": {
                    "title": "Region",
                    "field": "region",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "South Asia",
                            "Central and Eastern Europe",
                            "Middle East and North Africa",
                            "Latin America and Caribbean",
                            "North America and ANZ",
                            "Western Europe",
                            "Sub-Saharan Africa",
                            "Southeast Asia",
                            "East Asia",
                            "Commonwealth of Independent States",
                            "Africa"
                        ],
                        "range": [
                            "#a6cee3",
                            "#b2df8a",
                            "#1f78b4",
                            "#33a02c",
                            "#e31a1c",
                            "#fdbf6f",
                            "#6a3d9a",
                            "#fb9a99",
                            "#cab2d6",
                            "#ffff99",
                            "#ff7f00"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "region",
                        "type": "nominal",
                        "title": "Region"
                    },
                    {
                        "field": "gdp_per_capita",
                        "aggregate": "average",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Average GDP per Capita"
                    }
                ]
            }
        }
    ],
    "resolve": {
        "legend": {
            "color": "independent",
            "size": "independent"
        }
    }
}